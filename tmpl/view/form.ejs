<fieldset>

  <% fields.forEach(function(field){ %>
    <section row="<%= field.layout.hideWhenCreate ? 'fn-create-hide' : '' %>">
      <label class="label"><%= field.layout.label %></label>
      <label class="input state-disabled <%= field.layout.hideWhenEdit ? 'fn-edit-disabled' : '' %>">
      <input type="text" name="<%= field.name %>" placeholder="" v-model="data.item.<%= field.name %>" disabled>
      <b class="tooltip tooltip-bottom-right">請輸入<%= field.layout.label %></b></label>
    </section>
  <% }); %>

</fieldset>
<script>
  var formRules = {<% fields.forEach(function(field){ %>
    <%- field.name %>: {
      required: true,
    },<% }); %>
  };

  var formMessages = {<% fields.forEach(function(field){ %>
    <%- field.name %>: {
      required: "請給予 <%= field.label %>",
    },<% }); %>
  };
</script>
