
<!-- client -->
<table id="main-table" class="table table-striped table-bordered table-hover" width="100%">
  <thead>
    <tr>
      <th width="30"
          data-hide="phone"
          data-class="id expand" 
          class=""><i class="fa fa-fw text-muted fa-hashtag hidden-xs hidden-sm hidden-md"></i>ID</th><% fields.forEach(function(field){ %><% var sort = !field.layout.sort ? 'no-sort' : ''%><% var isVirtual = field.type.toLowerCase() === 'virtual'; %>
      <th data-hide="<%= field.layout.hide %>"
          data-class="<%= field.layout.class %>" 
          class="<%- field.layout.sort ? '' : 'no-sort' %> <%- field.type.toLowerCase() === 'virtual' ? 'virtual' :  '' %>"><%- field.layout.label %></th><% }); %>
      <th 
        width="80px" 
        data-hide="phone,tablet"
        data-class=""
        class="control"></th>
    </tr>
  </thead>
  <!-- client only -->
  <tbody>
    <tr v-for="item in data.items">
      <td>{{ item.id }}</td><% fields.forEach(function(field){ %>
      <td>{{ item.<%= field.name %>}}</td><% }); %>
      <td align="center" style="cursor: pointer;">
        <div class="row">
          <a class="btn btn-default btn-xs" role="button" v-on:click="show(item.id)">
            <i class="fa-fw fa fa-eye text-muted" />
          </a>
          <a class="btn btn-default btn-xs" role="button" v-on:click="edit(item.id)">
            <i class="fa-fw fa fa-pencil-square-o text-muted"/>
          </a>
        </div>
      </td>
    </tr>
  </tbody>
 </table>


<script type="text/javascript">
  var pagefunction = function() {

    // server only
    var columns = [
      { 'data': 'id' },
      <% fields.forEach(function(field){ if (field.type.toLowerCase() !== 'virtual') { %>{ 'data': '<%- field.name %>' },<% } else {%>{ 'data': null },<% }%>
      <% }); %>{ 'data': null },
    ];

    // server only
    var columnDefs = [<% fields.forEach(function(field, index){ if (field.type === 'virtual') { %><%- field.name %>{
            'targets'  : <%- index %>,
            'orderable': false,
            'searchable': false,
            'render': function ( data, type, row ) {
              return '<td>row.<%- field.name %></td>'
            }
          },<% }%><% }); %>
      {
        'targets': 'no-sort',
        'orderable': false,
      },
      {
        'targets': 'virtual',
        'orderable': false,
        'searchable': false,
      },
      {
        'targets'  : 'control',
        'orderable': false,
        'searchable': false,
        'render': function ( data, type, row ) {
          var colBody =
          '<div class="row-action-buttons hidden-xs hidden-sm">'+
          '<a name="showDataButton" class="btn btn-default btn-xs" role="button" data-id="'+row.id+'">'+
          '<i class="fa-fw fa fa-eye text-muted" />'+
          '</a>'+
          <%% if(data.permissions && (data.permissions.update || data.permissions.read_write)) { %>
            '<a name="editDataButton" class="btn btn-default btn-xs" role="button" data-id="'+row.id+'">'+
            '<i class="fa-fw fa fa-pencil-square-o text-muted"/>'+
            '</a>'+
          <%% } %>
          '</div>';
          return colBody;
        }
      },
    ];
    var serverSidePaging = <%%- (data.serverSidePaging != null)?data.serverSidePaging:false %>;
    <%%- include vue.ejs %>
    appMain.$mount("#main-index");
    appMain.loadItems(appMain.renderTable);
  };
</script>
