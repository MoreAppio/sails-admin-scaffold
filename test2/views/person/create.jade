doctype html
html
	head
		title Person model
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		style.
			table { margin: 10px 0; }
			td { padding: 5px; }
			p table { display: inline-block; }
	body
		h1 New entry for Person
		p <b>Path:</b> /
			a(href='/person') person
			| /new
		form(action='/person', method='POST')
			fieldset
				label name
				input(name='name', type='text')
			fieldset
				label username
				input(name='username', type='text')
			fieldset
				label email
				input(name='email', type='text')
			fieldset
				label password
				input(name='password', type='text')
			fieldset
				label age
				input(name='age', type='number')
			fieldset
				button(action='submit') Create

				a(href='/person')
					button(type='button') Cancel
			-if(error !== undefined)
				p Please fill all fields! Remember to validate the type of the fields!
		p
			a(href='/person') Person home
